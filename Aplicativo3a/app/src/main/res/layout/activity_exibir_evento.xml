<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDDADA">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_viewAssistido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            card_view:cardCornerRadius="15dp">

        <LinearLayout
                android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Detalhes do Evento"
                    android:textAlignment="center"
                    android:textColor="#00CED1"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/Divisor1"
                    android:layout_width="fill_parent"
                    android:layout_height="2dip"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="#00CED1" />

                <TextView
                    android:id="@+id/hiddenIdEvento"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:visibility="gone" />

            <TextView
                android:id="@+id/labelTituloEvento"
                    style="@style/MargensSize"
                android:text="Título:"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/valueTituloEvento"
                    style="@style/MargensSize"
                android:gravity="right"
                    android:singleLine="true" />

            <TextView
                android:id="@+id/labelDataInicioEvento"
                    style="@style/MargensSize"
                android:text="Início:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/valueDataInicioEvento"
                    style="@style/MargensSize"
                android:gravity="right"
                    android:singleLine="true" />

            <TextView
                android:id="@+id/labelDataFimEvento"
                    style="@style/MargensSize"
                android:text="Fim:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/valueDataFimEvento"
                    style="@style/MargensSize"
                android:gravity="right"
                    android:singleLine="true" />

            <TextView
                android:id="@+id/labelDescricaoEvento"
                    style="@style/MargensSize"
                android:text="Descrição:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/valueDescricaoEvento"
                    style="@style/MargensSize"
                android:gravity="right"
                android:singleLine="true"
                    android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/labelGastosEvento"
                style="@style/MargensSize"
                android:text="Gastos:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/valueGastosEvento"
                style="@style/MargensSize"
                android:gravity="right"
                android:singleLine="true"
                 />
            <TextView
                android:id="@+id/labelReceitasEvento"
                style="@style/MargensSize"
                android:text="Receitas:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/valueReceitasEvento"
                style="@style/MargensSize"
                android:gravity="right"
                android:singleLine="true"
                 />

        </LinearLayout>
        </android.support.v7.widget.CardView>


            <Button
                android:id="@+id/btnEditEvento"
                android:layout_width="70dp"
                android:layout_height="70dp"
            android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
            android:background="@drawable/botao_edit"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="20dp"/>

        </RelativeLayout>

</android.support.constraint.ConstraintLayout>