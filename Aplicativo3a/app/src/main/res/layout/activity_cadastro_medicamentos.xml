<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Assistidos.Medicamentos.InserirAlterar.CadastroMedicamentoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <TextView
            style="@style/MargensSize"
            android:id="@+id/txtAssistidoMedicamento"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/hiddenIdAssistidoMedicamento"
            android:visibility="gone"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/hiddenIdMedicamento"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/labelNomeMedicamento"
            style="@style/MargensSize"
            android:text="Nome do Medicamento:"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/edTxtNomeMedicamento"
            style="@style/MargensSizeEditText"
            android:inputType="text" />
        <TextView
            android:id="@+id/labelObservacoesMedicamento"
            style="@style/MargensSize"
            android:text="Observações:"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/edTxtObservacoesMedicamento"
            style="@style/MargensSizeEditText"
            android:inputType="text" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSalvarMedicamento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Salvar" />

            <Button
                android:id="@+id/btnAtualizarMedicamento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Atualizar" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>