<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <TextView
            android:id="@+id/hiddenIdParceiro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            />
        <TextView
            android:id="@+id/labelNomeParceiro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome/Empresa:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"/>
        <EditText
            android:id="@+id/edTxtNomeParceiro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />
        <TextView
            android:id="@+id/labelCnpjCpfParceiro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CNPJ/CPF:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"/>
        <EditText
            android:id="@+id/edTxtCnpjCpfParceiro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="datetime" />
        <TextView
            android:id="@+id/labelTelefoneParceiro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Telefone:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"/>
        <EditText
            android:id="@+id/edTxtTelefoneParceiro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="(xx) xxxxx-xxxx"
            android:inputType="phone" />
        <TextView
            android:id="@+id/labelDataVinculoParceiro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Parceiro desde:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"/>
        <EditText
            android:id="@+id/edTxtDataVinculoParceiro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="dd/mm/aaaa"
            android:inputType="date"
            />
        <TextView
            android:id="@+id/labelObservacoesParceiro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Observações:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"/>
        <EditText
            android:id="@+id/edTxtObservacoesParceiro"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="top"
            android:inputType="text"
            android:lines="10" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSalvarParceiro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:text="Salvar" />

            <Button
                android:id="@+id/btnAtualizarParceiro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:text="Atualizar"
                android:visibility="invisible" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>