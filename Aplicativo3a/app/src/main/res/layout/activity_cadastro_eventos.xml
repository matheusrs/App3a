<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:id="@+id/hiddenIdEvento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/labelTituloCadastroEvento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Título:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"/>

        <EditText
            android:id="@+id/edTxtTituloEvento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />


            <TextView
                android:id="@+id/labelInicioCadastroEvento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="Início:"
                android:textSize="18sp"
                android:textStyle="bold" />

        <EditText
            android:id="@+id/edTxtDataInicioEvento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="dd/mm/aaaa hh:mm"
            android:inputType="date" />
            <TextView
                android:id="@+id/labelFimCadastroEvento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="Fim do evento:"
                android:textSize="18sp"
                android:textStyle="bold" />

        <EditText
            android:id="@+id/edTxtDataFimEvento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="dd/mm/aaaa hh:mm"
            android:inputType="date" />

        <TextView
            android:id="@+id/labelGastosEvento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="Gastos:"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edTxtGastosEvento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="00.00"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/labelReceitasEvento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="Receitas:"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edTxtReceitasEvento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="00.00"
            android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/labelDescricaoCadastroEvento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="Descrição:"
                android:textSize="18sp"
                android:textStyle="bold" />

        <EditText
            android:id="@+id/edTxtDescricaoEvento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSalvarEvento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:text="Salvar" />

            <Button
                android:id="@+id/btnAtualizarEvento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:text="Atualizar"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>